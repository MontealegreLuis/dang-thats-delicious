extends layout

include mixins/_store-card

block content
    .container
        h2 #{currentTag || 'Tags'}
        ul.tags
            each tag in tags
                li.tag
                    a.tag-link(href=`/tags/${tag._id}` class=(tag._id === currentTag ? 'tag-link-active' : ''))
                        span.tag-text ##{tag._id}
                        span.tag-count ##{tag.count}
        .row
            each store in stores
                +storeCard(store)
