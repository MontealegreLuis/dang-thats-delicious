mixin registrationForm()
    form(action="/register" method="post")
        .form-group
            label(for="name") Name
            input(name="name" class="form-control" placeholder="Your name" required)
        .form-group
            label(for="email") Email
            input(name="email" class="form-control" type="email" placeholder="you@example.com" required)
        .form-group
            label(for="password") Password
            input(name="password" type="password" class="form-control")
        .form-group
            label(for="password-confirm") Confirm Password
            input(name="password-confirm" type="password" class="form-control")
        input(type="submit" class="btn btn-secondary btn-block mt-3" value="Register")
