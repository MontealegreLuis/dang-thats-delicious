mixin loginForm()
    form(action="/login" method="post")
        .form-group
            label(for="email") Email
            input(name="email" class="form-control" type="email" placeholder="you@example.com")
        .form-group
            label(for="password") Password
            input(name="password" type="password" class="form-control")
        input(type="submit" class="btn btn-secondary btn-block mt-3" value="Login")
