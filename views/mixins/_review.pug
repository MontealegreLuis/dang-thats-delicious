mixin review(review)
    .review-header
        .review-author
            img.review-author-avatar(src=review.author.gravatar)
            p= review.author.name
        .review-stars(title=`Rated ${review.rating} out of 5 stars`)
            = `★`.repeat(review.rating)
            = `☆`.repeat(5 - review.rating)
        time.review-time(datetime=review.created)= h.moment(review.created).fromNow()
    .review-body
        p.review-text= review.text
